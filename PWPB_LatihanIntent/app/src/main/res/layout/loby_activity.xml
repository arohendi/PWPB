<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/bar"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000000">
   <ImageButton
       android:layout_marginTop="20dp"
       android:background="#000000"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:src="@drawable/backk"
       android:defaultFocusHighlightEnabled="true"/>
   <TextView
       android:layout_marginTop="30dp"
       android:layout_width="wrap_content"
       android:textStyle="bold|normal"
       android:layout_height="wrap_content"
       android:text="Hallo,"
       android:typeface="sans"
       android:textSize="30dp"
       android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/poto"
            android:layout_marginTop="20dp"
            android:foregroundGravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/cwok" />

        <TextView
            android:gravity="center"
            android:id="@+id/viewdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="Nama" />
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:gravity="center"
            android:id="@+id/viewdata2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="Jenis Kelamin" />
    </LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_marginLeft="150dp"
    android:layout_width="300dp"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/scrool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/bar"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:src="@drawable/topii3" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:src="@drawable/mnetopi" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_below="@id/img1"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:src="@drawable/topi2" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_below="@id/img3"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:src="@drawable/topii" />
            <ImageView
                android:id="@+id/img4"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_below="@id/img3"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:src="@drawable/kuplukk" />
            <ImageView
                android:id="@+id/img4"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_below="@id/img3"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:src="@drawable/kupluk" />
            <ImageView
                android:id="@+id/img4"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_below="@id/img3"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:src="@drawable/topi4" />
            <ImageView
                android:id="@+id/img4"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_below="@id/img3"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:src="@drawable/mnetopi2" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

    </RelativeLayout>