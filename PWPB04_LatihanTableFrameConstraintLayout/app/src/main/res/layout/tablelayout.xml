<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow
        android:background="@color/Brown">
        <TextView
            android:layout_column="1"
            android:text="Open..."
            android:padding="3dp"/>
    </TableRow>

    <TableRow
        android:background="@color/torquoise3">
        <TextView
            android:layout_column="1"
            android:text="Save..."
            android:padding="3dp"/>
        <TextView
            android:gravity="right"
            android:text="Ctrl-S"
            android:padding="3dp"/>
    </TableRow>

    <TableRow
        android:background="@color/torquoise1">
        <TextView
            android:layout_column="1"
            android:text="Save As..."
            android:padding="3dp"/>
        <TextView
            android:gravity="right"
            android:text="Ctrl-Shift-S"
            android:padding="3dp"/>
    </TableRow>

    <View
        android:layout_height="2dp"
        android:background="@color/torquoise3"/>
    <TableRow
        android:background="@color/colorPrimary">
        <TextView
            android:text="x"
            android:padding="3dp"/>
        <TextView
            android:text="Import..."
            android:padding="3dp"/>
    </TableRow>
    <TableRow
        android:background="@color/colorPrimary">
        <TextView
            android:text="x"
            android:padding="3dp"/>
        <TextView
            android:text="Export..."
            android:padding="3dp"/>
        <TextView
            android:text="Ctrl-E"
            android:padding="3dp"
            android:gravity="right"/>
    </TableRow>

    <View
        android:layout_height="2dp"
        android:background="@color/Brown"/>
    <TableRow
        android:background="@color/colorAccent">
        <TextView
            android:layout_column="1"
            android:text="Quit"
            android:padding="3dp"/>
    </TableRow>
</TableLayout>